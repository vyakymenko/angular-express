{
  "name": "angular-express",
  "version": "1.0.0",
  "description": "Modular starter project for Full Stack Angular 2 (and beyond)/Express with Angular CLI, PM2",
  "repository": {
    "type": "git",
    "url": "https://github.com/vyakymenko/angular-express"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "nodemon": "nodemon",
    "pm2": "pm2",
    "start": "npm run server.watch & nodemon dist/server/app.js & ng serve",
    "client.build": "ng build",
    "client.test": "ng test",
    "client.lint": "ng lint",
    "client.e2e": "ng e2e",
    "client.watch": "ng build --watch",
    "server.build": "tsc -p server",
    "server.watch": "tsc -p server -watch",
    "server.run": "npm run server.watch & nodemon dist/server/app.js",
    "build.dev": "npm run server.build && ng build",
    "build.prod": "ng build --prod && npm run server.build",
    "e2e.live": "npm run build.prod && node dist/server/app.js & cypress open",
    "e2e.run": "node dist/server/app.js & cypress run",
    "e2e": "npm run build.prod && npm run e2e.run",
    "run.prod": "pm2 start dist/server/app.js",
    "test": "ng test --watch=false && npm run build.prod",
    "test.all": "ng test --watch=false && npm run build.prod && npm run e2e"
  },
  "optionalDependencies": {
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@bahmutov/add-typescript-to-cypress": "^2.1.0",
    "@types/jasmine": "~3.3.12",
    "@types/jasminewd2": "~2.0.3",
    "cypress": "^3.2.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "~1.4.2"
  },
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/redis": "^2.8.12",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "core-js": "^2.5.4",
    "express": "^4.16.4",
    "pm2": "^3.5.0",
    "redis": "^2.8.0",
    "rxjs": "~6.5.2",
    "tslib": "^1.9.0",
    "zone.js": "~0.9.1"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~7.3.9",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/node": "~8.9.4",
    "codelyzer": "~5.0.1",
    "nodemon": "^1.19.0",
    "ts-node": "~8.1.0",
    "tslint": "~5.16.0",
    "typescript": "~3.2.2"
  }
}
