{
  "name": "angular-express",
  "version": "1.0.0",
  "description": "Modular starter project for Full Stack Angular 2 (and beyond)/Express with Angular CLI, PM2",
  "repository": {
    "type": "git",
    "url": "https://github.com/vyakymenko/angular-express"
  },
  "license": "MIT",
  "scripts": {
    "ng": "ng",
    "pm2": "pm2",
    "nodemon": "nodemon",
    "lint.ui": "ng lint",
    "watch.server": "tsc -p server -watch",
    "e2e": "npm run build.prod && npm run e2e.run",
    "e2e.live": "npm run build.prod && node dist/server/app.js & cypress open",
    "e2e.run": "node dist/server/app.js & cypress run",
    "test.ui": "ng test --watch=false",
    "test.ui.watch": "ng test",
    "test.server": "npm run build.server && mocha dist/server/**/*.spec.js --exit",
    "test.all": "npm run test.server && ng test --watch=false && npm run build.prod && npm run e2e ",
    "build.server": "tsc -p server",
    "build.dev": "npm run build.server && ng build",
    "build.prod": "ng build --prod && npm run build.server",
    "run.prod": "pm2 start dist/server/app.js",
    "run.server": "npm run watch.server & nodemon dist/server/app.js",
    "start": "npm run watch.server & nodemon dist/server/app.js & ng serve --host 0.0.0.0"
  },
  "optionalDependencies": {
    "@bahmutov/add-typescript-to-cypress": "^2.1.0",
    "@cypress/webpack-preprocessor": "^4.0.3",
    "@types/chai": "^4.1.7",
    "@types/jasmine": "~3.3.12",
    "@types/jasminewd2": "~2.0.3",
    "@types/mocha": "^5.2.6",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "cypress": "^3.2.0",
    "jasmine-core": "~3.4.0",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "~4.1.0",
    "karma-chrome-launcher": "~2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "~2.0.1",
    "karma-jasmine-html-reporter": "~1.4.2",
    "mocha": "^6.1.4"
  },
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/router": "~7.2.0",
    "@types/body-parser": "^1.17.0",
    "@types/compression": "0.0.36",
    "@types/express": "^4.16.1",
    "@types/redis": "^2.8.12",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "core-js": "^2.5.4",
    "express": "^4.16.4",
    "knex": "^0.16.5",
    "morgan": "^1.9.1",
    "mysql2": "^1.6.5",
    "objection": "^1.6.9",
    "pg": "^7.11.0",
    "pm2": "^3.5.0",
    "redis": "^2.8.0",
    "rxjs": "~6.5.2",
    "tslib": "^1.9.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "~0.13.0",
    "@angular/cli": "~8.0.0",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/morgan": "^1.7.35",
    "@types/node": "~8.9.4",
    "codelyzer": "~5.0.1",
    "nodemon": "^1.19.0",
    "ts-node": "~8.2.0",
    "tslint": "~5.16.0",
    "typescript": "~3.2.2"
  }
}
